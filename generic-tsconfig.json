{
  "compilerOptions": {
    "target": "ES2019",
    "downlevelIteration": true,
    "module": "esnext",
    "jsx": "react",
    "jsxFactory": "h",
    "strict": true,
    "moduleResolution": "node",
    "composite": true,
    "declarationMap": true,
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": ".tmp/ts",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "static-build/*": ["src/static-build/*"],
      "client/*": ["src/client/*"],
      "shared/*": ["src/shared/*"],
      "features/*": ["src/features/*"],
      "worker-shared/*": ["src/worker-shared/*"]
    }
  }
}
